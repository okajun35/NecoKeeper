# NecoKeeper 環境変数設定例
# このファイルを .env にコピーして使用してください

# アプリケーション基本設定
APP_NAME=NecoKeeper
APP_VERSION=0.1.0
DEBUG=False
ENVIRONMENT=development

# サーバー設定
HOST=0.0.0.0
PORT=8000

# セキュリティ設定（本番環境では必ず変更してください）
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters-long
SESSION_COOKIE_NAME=necokeeper_session
SESSION_MAX_AGE=86400

# データベース設定
DATABASE_URL=sqlite:///./data/necokeeper.db
DATABASE_ECHO=False

# ファイルストレージ設定
MEDIA_DIR=./media
BACKUP_DIR=./backups
MAX_UPLOAD_SIZE=10485760

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# PDF生成設定
PDF_DPI=300
QR_CODE_SIZE=10

# バックアップ設定
BACKUP_ENABLED=True
BACKUP_SCHEDULE_HOUR=3
BACKUP_RETENTION_DAYS=30

# CORS設定（カンマ区切りで複数指定可能）
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# 管理者設定
ADMIN_EMAIL=admin@example.com
